<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>Enkilabs common library for support common features.</Description>
    <Copyright>Enkilabs 2016</Copyright>
    <TargetFramework>netstandard1.6</TargetFramework>
    <DebugType>portable</DebugType>
    <AssemblyName>enki.common.core</AssemblyName>
    <PackageId>enki.common.core</PackageId>
  </PropertyGroup>

  <Target Name="PostpublishScript" AfterTargets="Publish">
    <Exec Command="dotnet pack --no-build --configuration $(Configuration)" />
  </Target>

</Project>
